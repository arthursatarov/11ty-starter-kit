{# Open Graph #}
<meta property="og:type" content="{{ site.type }}">
<meta property="og:title" content="{{ title or site.title }}">
<meta property="og:description" content="{{ description or site.description }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:image" content="{{ site.image }}">

{# Twitter Card #}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ site.title or title }}">
<meta name="twitter:description" content="{{ site.description or description }}">
<meta name="twitter:site" content="{{ site.url }}{{ page.url }}">
<meta name="twitter:image" content="{{ site.image }}">
